# Configuration de GreenTech Solutions
# Copier ce fichier en .env et ajuster les valeurs

# === APPLICATION ===
APP_NAME=GreenTech Solutions
APP_VERSION=1.0.0
DEBUG=false

# === PORTS ===
STREAMLIT_PORT=8501
API_PORT=8000

# === API CONFIGURATION ===
API_BASE_URL=http://localhost:8000
API_HOST=0.0.0.0
API_WORKERS=1

# === DONNÉES ===
DATA_PATH=data/donnees_ademe_finales_nettoyees_69_final_pret.csv
CODES_POSTAUX_PATH=data/adresses-69.csv

# === MODÈLES ===
MODELS_DIR=models
CLASSIFIER_PATH=models/classification_model.pkl
REGRESSOR_PATH=models/regression_model.pkl
METRICS_PATH=models/metrics.json

# === API ADEME ===
ADEME_API_URL=https://data.ademe.fr/data-fair/api/v1/datasets/dpe03existant/lines
ADEME_API_TIMEOUT=30
ADEME_API_RETRY=3

# === MACHINE LEARNING ===
ML_TEST_SIZE=0.2
ML_RANDOM_STATE=42
ML_N_ESTIMATORS=100
ML_MAX_DEPTH=20

# === LOGGING ===
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# === SÉCURITÉ (Production) ===
# SECRET_KEY=votre-cle-secrete-a-generer
